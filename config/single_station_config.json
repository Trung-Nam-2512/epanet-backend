    "conversion_rules": {
        "pressure": {
            "source": "P1.value",
            "target": "pressure",
            "unit_conversion": "m -> m",
            "formula": "P1.value"
        },
        "flow": {
            "source": "Q1.value - Q2.value",
            "target": "flow",
            "unit_conversion": "l -> LPS",
            "formula": "(Q1.value - Q2.value) / 1000"
        },
        "demand": {
            "source": "|Q1.value - Q2.value|",
            "target": "demand",
            "unit_conversion": "l -> LPS",
            "formula": "abs(Q1.value - Q2.value) / 1000"
        },
        "head": {
            "source": "P1.value + level",
            "target": "head",
            "unit_conversion": "m -> m",
            "formula": "P1.value + (level or 0)"
        }
    },
    "simulation_config": {
        "default_duration": 1,
        "default_hydraulic_timestep": 1,
        "default_report_timestep": 1,
        "default_demand_multiplier": 1.0,
